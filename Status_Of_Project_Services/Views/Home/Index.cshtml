@{
    ViewData["Title"] = "Home Page";
    string[] serviceUrls = {
        "https://jsonplaceholder.typicode.com/posts",
        "https://informatik1.ei.hv.se/FixedEventAPI/api/FixedEvents",
        "https://informatik1.ei.hv.se/FixedEventAPI/api/Tags",
        "https://informatik2.ei.hv.se/OrganizerAPI/api/Organizers",
        "https://informatik3.ei.hv.se/KontoInloggAPI/api/Admins",
        "https://informatik3.ei.hv.se/KontoInloggAPI/api/Orgs",
        "https://informatik3.ei.hv.se/KontoInloggAPI/api/Users",
        "https://informatik4.ei.hv.se/EVENTAPI/api/events",
        "https://informatik7.ei.hv.se/ProfilAPI/api/Profile",
        "https://informatik7.ei.hv.se/ProfilAPI/api/SignUps",
        "https://informatik8.ei.hv.se/Places_API/api/Places"
    };
}

<h2>Service Status</h2>

<table class="service-table">
    <thead>
        <tr class="service-type-all">
            <th class="service-type"><strong>Service Name</strong></th>
            <th class="service-type"><strong>Service URL</strong></th>
            <th class="service-type"><strong>Service Status</strong></th>
            <th class="service-type"><strong>Service Server Status</strong></th>
            <th class="service-type"><strong>Service Latency</strong></th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < serviceUrls.Length; i++)
        {
            <tr>
                <td class="service-type-description"><span id="serviceName@(i + 1)">Unknown</span></td>
                <td class="service-type-description"><span id="serviceUrl@(i + 1)">@serviceUrls[i]</span></td>
                <td class="service-type-description"><span id="serviceStatus@(i + 1)">Unknown</span></td>
                <td class="service-type-description"><span id="serverStatus@(i + 1)">Unknown</span></td>
                <td class="service-type-description"><span id="serviceLatency@(i + 1)">Unknown</span></td>
            </tr>
        }
    </tbody>
</table>

<script src="site.js"></script>